<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<FlowPane prefHeight="601.0" prefWidth="846.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="mediahand.controller.MediaHandAppController">
    <children>
        <TableView fx:id="mediaTableView" onKeyPressed="#onPlayEnter" prefHeight="600.0">
            <columns>
                <TableColumn prefWidth="225.0" text="Title">
                    <cellValueFactory>
                        <PropertyValueFactory property="title"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="57.0" text="Episode">
                    <cellValueFactory>
                        <PropertyValueFactory property="currentEpisode"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="86.0" text="Type">
                    <cellValueFactory>
                        <PropertyValueFactory property="mediaType"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="66.0" text="Rating">
                    <cellValueFactory>
                        <PropertyValueFactory property="rating"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="99.0" text="Added">
                    <cellValueFactory>
                        <PropertyValueFactory property="added"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="74.0" text="Length">
                    <cellValueFactory>
                        <PropertyValueFactory property="episodeLength"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="81.0" text="Watched">
                    <cellValueFactory>
                        <PropertyValueFactory property="watchedDate"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="78.0" text="#Watched">
                    <cellValueFactory>
                        <PropertyValueFactory property="watchedCount"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <AnchorPane>
            <children>
                <Button layoutX="6.0" mnemonicParsing="false" onAction="#onPlayButton" prefHeight="25.0"
                        prefWidth="64.0" text="Play"/>
                <Button layoutX="50.0" layoutY="46.0" mnemonicParsing="false" onAction="#increaseCurrentEpisode"
                        prefHeight="25.0" prefWidth="25.0" text="+"/>
                <Button layoutY="46.0" mnemonicParsing="false" onAction="#decreaseCurrentEpisode" prefHeight="25.0"
                        prefWidth="25.0" text="-"/>
            </children>
        </AnchorPane>
    </children>
</FlowPane>
